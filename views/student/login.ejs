<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <%- include('../partials/styles') %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body class="blue-grey darken-4">
    <header class="navbar-fixed">
        <nav class="scooter">
            <div class="nav-wrapper">
                <div class="container">
                    <a href="#!" class="brand-logo">
                        <%= title %>
                    </a>
                    <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                    <ul class="right hide-on-med-and-down">
                        <li><a href="/"><i class="material-icons left">home</i>HOME</a></li>
                        <li class="active"><a href="/student/login"><i class="material-icons left">lock_outline</i>LOGIN</a></li>
                        <li><a href="/student/signup"><i class="material-icons left">person</i>SIGN UP</a></li>
                    </ul>
                </div>
                <ul class="side-nav" id="mobile-demo">
                    <li><a href="/"><i class="material-icons left">home</i>HOME</a></li>
                    <li class="active"><a href="/student/login"><i class="material-icons left">lock_outline</i>LOGIN</a></li>
                    <li><a href="/student/signup"><i class="material-icons left">person</i>SIGN UP</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="col s12 m8 offset-m2 l6 offset-l3">
                    <div class="card  mt-6">
                        <div class="card-content scooter">
                            <div class="center">
                                <h5 class="uppercase white-text">login</h5>
                            </div>
                        </div>
                        <div class="card-content">
                            <form action="" class="row">
                                <div class="input-field col s12">
                                    <input id="matric_number" type="number" data-length="9" class="validate">
                                    <label for="matric_number">MATRIC NUMBER</label>
                                </div>

                                <div class="input-field col s12">
                                    <input id="surname" type="text" class="validate">
                                    <label for="surname">SURNAME</label>
                                </div>
                            </form>
                            <div class="card-action">
                                <div class="center">
                                    <a href="#!" class="btn scooter waves-effect waves-light">
                                        proceed
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card scooter">
                        <div class="card-content">
                            <div class="center">
                                <h6 class="uppercase white-text">don't have an account? <a class="bold black-text" href="/signup">signup</a></h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
    <script>
        $(document).ready(function () {
            $(".button-collapse").sideNav();
            $('.slider').slider();
        });
    </script>
</body>

</html>